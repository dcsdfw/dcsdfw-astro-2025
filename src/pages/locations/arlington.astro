    <section class="py-16">
      <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
            Arlington Cleaning Programs
          </h2>
          <p class="text-lg text-gray-700 mb-8 text-center">
