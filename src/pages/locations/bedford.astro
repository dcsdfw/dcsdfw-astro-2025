---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header';
import Footer from '../../components/Footer';
import ScrollToTop from '../../components/ScrollToTop';
import { Clock, CheckCircle } from 'lucide-react';
---

<Layout title="Commercial Cleaning Services Bedford TX | Dream Cleaned">
  <div>
    <Header client:load />

    <section class="relative pt-32 pb-20 md:pt-40 md:pb-28 overflow-hidden">
      <div class="absolute inset-0">
        <img src="/excellence-image.jpg" alt="Bedford TX commercial cleaning services" class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-white/80"></div>
      </div>
      <div class="container relative mx-auto px-6 z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="mb-6 font-heading font-bold text-balance text-4xl md:text-5xl text-gray-900">
            Professional Commercial Cleaning Services in Bedford, TX
          </h1>
          <p class="text-lg md:text-xl text-gray-600 mb-8">
            Reliable cleaning for Bedford offices, retail, medical, and municipal facilitiesâ€”scheduled and on-demand.
          </p>
          <div class="flex flex-col sm:flex-row justify-center gap-4">
            <a href="#contact" class="inline-flex items-center px-8 py-4 bg-brand-gold text-white rounded-lg font-semibold hover:bg-brand-gold/90 transition-colors">Get Your Free Quote</a>
            <a href="tel:817-993-9993" class="inline-flex items-center px-8 py-4 bg-white border-2 border-brand-gold text-brand-gold rounded-lg font-semibold hover:bg-brand-gold hover:text-white transition-colors">Call Now: (817) 993-9993</a>
          </div>
        </div>
      </div>
    </section>

    <section class="py-16">
      <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto grid md:grid-cols-2 gap-8 items-start">
          <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-6">Why Bedford Businesses Choose Us</h2>
            <ul class="space-y-3 text-gray-700">
              <li class="flex items-start"><CheckCircle className="h-4 w-4 text-brand-gold mr-2 mt-0.5" /><span>Local crews, background-checked and insured</span></li>
              <li class="flex items-start"><CheckCircle className="h-4 w-4 text-brand-gold mr-2 mt-0.5" /><span>Flexible nightly, weekly, or monthly schedules</span></li>
              <li class="flex items-start"><CheckCircle className="h-4 w-4 text-brand-gold mr-2 mt-0.5" /><span>Medical, office, retail, and church cleaning expertise</span></li>
              <li class="flex items-start"><CheckCircle className="h-4 w-4 text-brand-gold mr-2 mt-0.5" /><span>Fast emergency response when needed</span></li>
            </ul>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-card border-l-4 border-brand-gold">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Popular Services in Bedford</h3>
            <ul class="space-y-2 text-gray-700">
              <li>Office and lobby cleaning</li>
              <li>Medical and dental office sanitization</li>
              <li>Retail floor and restroom care</li>
              <li>Daycare and church facility cleaning</li>
              <li>Move-in/move-out and post-event cleaning</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="py-16 bg-brand-cream/30">
      <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Need Cleaning Help in Bedford?</h2>
          <p class="text-xl text-gray-600 mb-8">Get a quick quote or call for current emergency availability.</p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="#contact" class="inline-flex items-center px-8 py-4 bg-brand-gold text-white rounded-lg font-semibold hover:bg-brand-gold/90 transition-colors">Get Your Free Quote</a>
            <a href="tel:817-993-9993" class="inline-flex items-center px-8 py-4 border-2 border-brand-gold text-brand-gold rounded-lg font-semibold hover:bg-brand-gold hover:text-white transition-colors">Call (817) 993-9993</a>
          </div>
        </div>
      </div>
    </section>

    <Footer client:load />
    <ScrollToTop client:load />
  </div>
</Layout>

