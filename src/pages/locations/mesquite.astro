              <p class="text-gray-600 text-sm">Healthcare and medical facilities</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Mesquite Climate Impact -->
    <section class="py-16">
      <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
