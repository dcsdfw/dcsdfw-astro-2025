---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header';
import Footer from '../components/Footer';
import ScrollToTop from '../components/ScrollToTop';
import { MapPin, Clock, Users, Phone } from 'lucide-react';

const serviceAreas = [
  {
    id: "dallas-county",
    name: "Dallas County",
    population: "2.6M+",
    towns: ["Dallas", "Irving", "Garland", "Mesquite", "Richardson", "Carrollton", "DeSoto", "Lancaster", "University Park", "Highland Park"],
    businessTypes: ["Corporate Offices", "Healthcare", "Tech Companies", "Retail"],
    responseTime: "24/7"
  },
  {
    id: "tarrant-county",
    name: "Tarrant County",
    population: "2.2M+",
    towns: ["Fort Worth", "Arlington", "Grand Prairie", "Mansfield", "Euless", "Bedford", "Hurst", "Grapevine", "Southlake", "Colleyville"],
    businessTypes: ["Manufacturing", "Healthcare", "Corporate Offices", "Logistics"],
    responseTime: "24/7"
  },
  {
    id: "collin-county",
    name: "Collin County",
    population: "1.2M+",
    towns: ["Plano", "Frisco", "McKinney", "Allen", "Wylie", "Murphy", "Lucas", "Fairview", "Parker", "Prosper"],
    businessTypes: ["Tech Companies", "Corporate Parks", "Medical Centers", "Education"],
    responseTime: "24/7"
  },
  {
    id: "denton-county",
    name: "Denton County",
    population: "980K+",
    towns: ["Denton", "Lewisville", "Flower Mound", "Coppell", "The Colony", "Little Elm", "Highland Village", "Lake Dallas", "Corinth", "Shallowwater"],
    businessTypes: ["Education", "Healthcare", "Manufacturing", "Corporate"],
    responseTime: "24/7"
  }
];
---

<Layout title="Service Areas | Dream Cleaned Services - Dallas Commercial Cleaning" description="Dream Cleaned Services provides commercial cleaning throughout Dallas-Fort Worth including Dallas County, Tarrant County, Collin County, and Denton County.">
  <div class="min-h-screen">
    <Header client:load />

    <!-- Hero Section -->
    <section class="relative pt-32 pb-20 md:pt-40 md:pb-28 bg-brand-dark text-white overflow-hidden">
      <!-- Background Elements -->
      <div class="absolute inset-0 bg-gradient-to-br from-brand-dark via-brand-dark/95 to-brand-dark/90"></div>
      
      <div class="container mx-auto px-6 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-6xl font-bold mb-6">
            Service Areas
          </h1>
          <p class="text-xl md:text-2xl text-brand-lightGold mb-8">
            Professional commercial cleaning services throughout the Dallas-Fort Worth metroplex
          </p>
          <p class="text-lg text-white/80 mb-12 max-w-3xl mx-auto">
            We provide comprehensive cleaning solutions for businesses in Dallas County, Tarrant County, Collin County, and Denton County. Our local team understands the unique needs of DFW businesses and delivers reliable, high-quality cleaning services.
          </p>
        </div>
      </div>
    </section>

    <!-- Google Maps Section -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-6">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">
              Our Service Coverage Area
            </h2>
            <p class="text-xl text-gray-600">
              Interactive map showing our service areas throughout the DFW metroplex
            </p>
          </div>
          
          <div class="bg-white rounded-xl shadow-card overflow-hidden">
            <iframe 
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d214587.5691945674!2d-97.5!3d32.8!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x864c19f77b45974b%3A0xb9ec9ba4bd19a3e5!2sDallas-Fort%20Worth%20Metroplex%2C%20TX!5e0!3m2!1sen!2sus!4v1620000000000!5m2!1sen!2sus"
              width="100%" 
              height="450" 
              style="border:0;" 
              allowfullscreen="" 
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade">
            </iframe>
          </div>
        </div>
      </div>
    </section>

    <!-- Service Areas Grid -->
    <section class="py-20">
      <div class="container mx-auto px-6">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">
              Counties We Serve
            </h2>
            <p class="text-xl text-gray-600">
              Professional cleaning services available throughout the DFW metroplex
            </p>
          </div>
          
          <div class="grid md:grid-cols-2 gap-8">
            {serviceAreas.map((area) => (
              <div class="bg-white rounded-xl p-8 shadow-[0_2px_10px_rgba(0,0,0,0.1)] hover:shadow-[0_4px_15px_rgba(0,0,0,0.125)] transition-all duration-300 fade-in-section">
                <div class="flex items-start justify-between mb-6">
                  <div class="flex items-center">
                    <div class="h-12 w-12 rounded-full bg-brand-gold/20 flex items-center justify-center mr-4">
                      <MapPin className="h-6 w-6 text-brand-gold" />
                    </div>
                    <div>
                      <h3 class="text-xl font-semibold">{area.name}</h3>
                    </div>
                  </div>
                  <div class="flex items-center text-sm text-brand-gold">
                    <Clock className="h-4 w-4 mr-1" />
                    {area.responseTime}
                  </div>
                </div>
                
                <div class="mb-6">
                  <h4 class="font-medium mb-3">Cities & Towns Served:</h4>
                  <div class="grid grid-cols-2 gap-2 text-sm text-muted-foreground">
                    {area.towns.map((town) => (
                      <a href={`/locations/${town.toLowerCase().replace(/\s+/g, '-')}`} class="flex items-center hover:text-brand-gold transition-colors">
                        <div class="w-1.5 h-1.5 rounded-full bg-brand-gold mr-2"></div>
                        {town}
                      </a>
                    ))}
                  </div>
                </div>
                
                <div class="flex items-center justify-start pt-4 border-t border-gray-100">
                  <a href={`/${area.id}`} class="inline-flex items-center px-4 py-2 bg-brand-gold text-white rounded-lg font-medium hover:bg-brand-gold/90 transition-colors text-sm">
                    See Details
                  </a>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="pt-6 pb-24 bg-brand-cream/30">
      <div class="container mx-auto px-6 text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">
          Ready to Get Started?
        </h2>
        <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
          Join hundreds of satisfied DFW businesses who trust Dream Cleaned Services with their commercial cleaning needs.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#contact" class="inline-flex items-center px-8 py-4 bg-brand-gold text-white rounded-lg font-semibold hover:bg-brand-gold/90 transition-colors">
            Get Your Free Quote
          </a>
          <a href="tel:817-993-9993" class="inline-flex items-center px-8 py-4 border-2 border-brand-gold text-brand-gold rounded-lg font-semibold hover:bg-brand-gold hover:text-white transition-colors">
            Call (817) 993-9993
          </a>
        </div>
      </div>
    </section>

    <Footer client:load />
    <ScrollToTop client:load />
  </div>
</Layout>
