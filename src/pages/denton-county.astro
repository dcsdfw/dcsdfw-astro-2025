---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header';
import Footer from '../components/Footer';
import ScrollToTop from '../components/ScrollToTop';
import { MapPin, Clock, Users, CheckCircle } from 'lucide-react';

const dentonCities = [
  "Denton", "Lewisville", "Flower Mound", "Little Elm", "The Colony", "Corinth", 
  "Highland Village", "Sanger", "Aubrey", "Pilot Point", "Roanoke", "Argyle", "Lake Dallas"
];

const cityToSlug = (name: string) =>
  name
    .toLowerCase()
    .normalize('NFKD')
    .replace(/[^a-z0-9]+/g, '-')
    .replace(/(^-|-$)/g, '');
---

<Layout title="Denton County Commercial Cleaning | Dream Cleaned Services" description="Professional commercial cleaning services throughout Denton County. Serving Denton, Lewisville, Flower Mound, The Colony and all surrounding cities.">
  <div class="min-h-screen">
    <Header client:load />
    
    <!-- Hero Section -->
    <section class="pt-32 pb-16 bg-brand-cream/20">
      <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            Denton County Commercial Cleaning
          </h1>
          <p class="text-xl text-gray-600 mb-8">
            Professional cleaning services for businesses throughout Denton County
          </p>
          <div class="flex items-center justify-center space-x-6 text-gray-600">
            <div class="flex items-center">
              <Clock className="h-5 w-5 mr-2" />
              <span>Next Day Response</span>
            </div>
            <div class="flex items-center">
              <CheckCircle className="h-5 w-5 mr-2" />
              <span>Bonded & Insured</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- About Denton County Section -->
    <section class="py-16">
      <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto">
          <div class="grid md:grid-cols-2 gap-12 items-center">
            <div>
              <h2 class="text-3xl font-bold text-gray-900 mb-6">
                Denton County's Trusted Commercial Cleaning Partner
