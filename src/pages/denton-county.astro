          </div>
          
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {dentonCities.map((city) => (
              <a href={`/locations/${cityToSlug(city)}`} class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="flex items-center">
                  <MapPin className="h-4 w-4 text-brand-gold mr-3" />
                  <h4 class="font-semibold text-gray-900 text-base">{city}</h4>
                </div>
